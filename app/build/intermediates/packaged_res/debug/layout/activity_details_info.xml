<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailsInfo">

    <LinearLayout
        android:background="@drawable/header_curve"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="6"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fetchimag"
                android:layout_width="130dp"
                app:civ_border_width="1dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/empty_profile_img"/>
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_weight="1"
            android:weightSum="7"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name                       :"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation            :"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area of Study         :"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email                        :"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number                     :"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adress                      :"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/fetchName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=""

                    android:textColor="@color/black"
                    android:textSize="17dp" />
                <TextView
                    android:id="@+id/fetshDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/fetchAofSrudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/festhEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/fetchMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/fetchAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
