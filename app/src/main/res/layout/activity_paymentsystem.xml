<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:background="#D5EDEB"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="5dp"
 >
<!--    tools:context=".paymentsystem"-->

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/txtclose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cerclebackground"/>

    <TextView
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bkash Payment"
        android:textColor="#334BCF"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="center"/>

<!--    fist step-->
    <LinearLayout
        android:id="@+id/firstpase"
        android:visibility="visible"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/bikashnumbr"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:hint="Enter your Bkash number"
            android:layout_height="50dp"
            android:background="@drawable/card_style"
            />
        <EditText
            android:id="@+id/ammount"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:hint="Enter Amount"
            android:layout_height="50dp"
            android:background="@drawable/card_style"
            />
        <Button
            android:id="@+id/paymentB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F6F6FB"
            android:text="Payment"

            android:textColor="@color/black"/>


    </LinearLayout>


<!--    Secend Step-->

    <LinearLayout
        android:id="@+id/scndpase"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/otp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:hint="Enter OTP"
            android:layout_height="50dp"
            android:background="@drawable/card_style"
            />
        <Button
            android:id="@+id/trsubmitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#A8F5D7"
            android:text="Submit"
            android:textColor="@color/black"

            >

        </Button>


    </LinearLayout>

<!--     Thrid Step-->


    <LinearLayout
        android:id="@+id/thridpase"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

     <ImageView
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:src="@drawable/checkmark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Successfull"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#A8F5D7"
            android:text="Done"
            android:textColor="@color/black"/>


    </LinearLayout>



</LinearLayout>